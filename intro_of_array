#include<iostream>
using namespace std;
int main(){
    int n;
    cout<<"enter the size of an array:"<<endl;
    cin>>n;
    int arr[n];
    cout<<"enter the element of an array"<<endl;
    for(int i=0;i<=n-1;i++){
        cin>>arr[i];
       
    }
     for(int i=0;i<=n-1;i++){
      cout<<"Element of an array"<<i+1<<"  :"<<arr[i]<<endl;
        
    }
    
}
how to find element in the array
#include<iostream>
using namespace std;
int main(){
int arr[4]={1,2,3,4};
int target;
cout<<"enter the value that you want to search it";
cin>>target;
for (int i=0;i<arr[4];i++){
if(target == arr[i]){
cout<<"found successfully";
}
else{
cout<<"not found";
}
}
}
